    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/radioConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/question">


        <RadioGroup
            android:id="@+id/radioOptions"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option1"
                android:buttonTint="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/radioOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option2"
                android:buttonTint="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/radioOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option3"
                android:buttonTint="@color/colorPrimary"/>

            <RadioButton
                android:id="@+id/radioOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option4"
                android:buttonTint="@color/colorPrimary"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/checkBoxConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/radioConstraint">


        <CheckBox
            android:id="@+id/checkBoxOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option1"
            android:buttonTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBoxOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option2"
            android:buttonTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxOption1" />

        <CheckBox
            android:id="@+id/checkBoxOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option3"
            android:buttonTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxOption2" />

        <CheckBox
            android:id="@+id/checkBoxOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option4"
            android:buttonTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxOption3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>